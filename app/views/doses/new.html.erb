<h1>Create your own Doses</h1>


<%= form_for [@cocktail, @dose] do |f| %>

  <p>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :ingredient_id %>
    <%= f.select :ingredient_id, @ingredients.collect{|i| [i.name, i.id]} %>
  </p>


  <%= f.button :submit %>
<% end %>

